{
  "name": "Chrome extension react starter kit",
  "version": "1.0.0",
  "manifest_version": 2,
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "dist/contentScript.js"
      ],
      "run_at": "document_end"
    }
  ],
  "background": {
    "scripts": ["dist/background.js"],
    "persistent": false
  },
  "externally_connectable": {
    "matches": ["*://localhost/*"]
  }
}
